{
  "name": "johannschopplich/kirby-copilot",
  "description": "AI-powered content generation for the Kirby CMS",
  "type": "kirby-plugin",
  "version": "1.1.0",
  "keywords": [
    "content",
    "DeepL",
    "kirby",
    "translation"
  ],
  "license": "PROPRIETARY",
  "homepage": "https://github.com/johannschopplich/kirby-copilot#readme",
  "authors": [
    {
      "name": "Johann Schopplich",
      "email": "pkg@johannschopplich.com",
      "homepage": "https://johannschopplich.com"
    }
  ],
  "require": {
    "getkirby/cms": "^4.0",
    "getkirby/composer-installer": "^1.2",
    "vlucas/phpdotenv": "^5.6"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "@stable"
  },
  "scripts": {
    "dev": [
      "Composer\\Config::disableProcessTimeout",
      "@php -S localhost:8000 -t playground/public vendor/getkirby/cms/router.php"
    ],
    "fix": "php-cs-fixer fix",
    "dist": "composer install --no-dev --optimize-autoloader"
  },
  "config": {
    "optimize-autoloader": true,
    "allow-plugins": {
      "getkirby/composer-installer": true
    }
  },
  "extra": {
    "kirby-cms-path": false
  }
}
